@model Agenda.Models.Acudiente

@{
    ViewBag.Title = "Create";
}

<h2>Create Acudientes</h2>
<h3>@ViewBag.Error</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken() // este campo es obligatorio
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.LabelFor(acudiente => acudiente.Documento)
    @Html.EditorFor(acudiente => acudiente.Documento)
    @Html.ValidationMessageFor(acudiente => acudiente.Documento, "", new { @class = "text-danger" })
    <hr />

    @Html.LabelFor(acudiente => acudiente.Nombres)
    @Html.EditorFor(acudiente => acudiente.Nombres)
    @Html.ValidationMessageFor(acudiente => acudiente.Nombres, "", new { @class = "text-danger" })
    <hr />
    @Html.LabelFor(acudiente => acudiente.Apellidos)
    @Html.EditorFor(acudiente => acudiente.Apellidos)
    @Html.ValidationMessageFor(acudiente => acudiente.Apellidos, "", new { @class = "text-danger" })
    <hr />
    @Html.LabelFor(acudiente => acudiente.Direccion)
    @Html.EditorFor(acudiente => acudiente.Direccion)
    <hr />
    @Html.LabelFor(acudiente => acudiente.Correo)
    @Html.EditorFor(acudiente => acudiente.Correo)
    @Html.ValidationMessageFor(acudiente => acudiente.Correo, "", new { @class = "text-danger" })
    <hr />
    @Html.LabelFor(acudiente => acudiente.Celular)
    @Html.EditorFor(acudiente => acudiente.Celular)
    <hr />

    <input type="submit" value="Create">
}
<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


