@model IEnumerable<Agenda.Models.Acudiente>

@{
    ViewBag.Title = "Index Acudientes";
}

<h2>Acudientes</h2>

@using (Html.BeginForm())
{
    <p>
        @Html.ActionLink("Crear Acudiente", "Create")
    </p>
    
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AcudienteId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AcudienteId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AcudienteId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AcudienteId })

                </td>
            </tr>
        }
    </table>
}